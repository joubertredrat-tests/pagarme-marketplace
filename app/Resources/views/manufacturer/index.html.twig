{% extends 'base.html.twig' %}

{% block body %}

<div class="column">
    <div class="row">
        {{ include('menu.html.twig') }}
    </div>

    <div class="row">
        {{ include('messages.html.twig') }}
    </div>

    <div class="row">
        <h1>Manufacturers</h1>
    </div>

    <div class="row">
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for manufacturer in manufacturers %}
                <tr>
                    <td class="collapsing">{{ manufacturer.id }}</td>
                    <td>{{ manufacturer.name }}</td>
                    <td class="collapsing">
                        <a href="{{ path('admin_manufacturer_delete', { 'id': manufacturer.id }) }}" class="ui right floated small negative labeled icon button">
                            <i class="trash icon"></i>
                            Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot class="full-width">
            <tr>
                <th colspan="3">
                    <a class="ui right floated small primary labeled icon button"href="{{ path('admin_manufacturer_new') }}">
                        <i class="star icon"></i>
                        New
                    </a>
                </th>
            </tr>
            </tfoot>
        </table>
    </div>
</div>

{% endblock %}
